header {
    display: block;
    box-shadow: 0 0 3px rgba(0,0,0,0.1);
    height: 65px;
    margin-top: -5px;
    line-height: 65px;
    .title {
        float: left;
        position: relative;
        font-size: 26px;
        font-family: "myFirstFont";
}
    .site-nav {
        float: right;
        margin-right: -12px;
        .menu{
            display: block;
            position: relative;
            padding-left: 0;
            padding-right: 0px;
            .menu-item {
                display: inline-block;
                margin-right: 15px;
                font-size: 16px;
            }}}
}
header:before, header:after {
    content: " ";
    display: table;
}
header:after {
    clear: both;
}
@media only screen and (max-width: 520px) {
    .title {
        display: none
    }

}